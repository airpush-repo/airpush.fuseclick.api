    {
      "type": "node",
      "request": "launch",      
      "name": "Launch Test Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": ["test/api.test.js"],
      "program": "${workspaceFolder}\\node_modules\\mocha\\bin\\_mocha",
    }
  ]
}